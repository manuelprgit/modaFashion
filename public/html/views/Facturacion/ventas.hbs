<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    {{> head_links}}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.css" />
    <link rel="stylesheet" href="./css/inventario.css">
    <link rel="stylesheet" href="./css/main.css">
    <link rel="stylesheet" href="./css/factura.css">

</head>

<body>
    {{> tools}}
    <div class="general-content">
        {{> side_menu}}
        <div class="main-content">
            {{> head}}

            <main>
                <div class="button-content">
                </div>
                <div class="content-invoice">
                    <div class="panel-content">
                        <div class="row-head">
                            <div class="search">
                                <input type="text" placeholder="Buscar factura">
                            </div>
                        </div>
                        <div class="content-card" id="contentCard">


                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <template id="templateMenuTable">
        <div class="content-menu-table" id="subContextMenu">
            <div class="row-option" id="postDocument">
                <div class="ico">
                    <i class="fa-regular fa-paper-plane"></i>
                </div>
                <p id="textStatus">
                </p>
            </div>
            <div class="row-option" id="decline">
                <div class="ico">
                    <i class="fa-regular fa-calendar-xmark"></i>
                </div>
                <p id="">
                    Rechazar
                </p>
            </div>
            <div class="row-option">
                <div class="ico">
                    <i class="fa-solid fa-print"></i>
                </div>
                <p>
                    Imprimir
                </p>
            </div>
        </div>
    </template>
    <script src="./js/sales/sales.js" type="module"></script>
    <script>
        document.querySelector('a[href="/facturacion"]').classList.add('active')
    </script>
</body>

</html>